{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx",
  ]
}